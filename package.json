{
  "name": "paz-gimbal-control",
  "version": "1.2.1",
  "description": "PAZ Gimbal Control - Professional gimbal control interface",
  "type": "module",
  "main": "electron/main.cjs",
  "author": "PAZ Gimbal",
  "build": {
    "appId": "com.paz.gimbal.control",
    "productName": "PAZ Gimbal Control",
    "mac": {
      "category": "public.app-category.video",
      "target": [
        "dmg"
      ],
      "hardenedRuntime": false
    },
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "electron/**/*",
      "server/**/*",
      "libs/**/*",
      "package.json"
    ],
    "asar": false
  },
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "server": "python3 server/zt_bridge.py --zt-path libs/ZAP_Tracking",
    "server:virtual": "python3 server/zt_bridge.py --virtual",
    "start": "concurrently \"npm run dev\" \"npm run server\"",
    "virtual": "concurrently \"npm run dev\" \"npm run server:virtual\"",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "lint": "eslint src --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "electron:dev": "concurrently -k \"cross-env BROWSER=none npm run dev\" \"wait-on http://localhost:5173 && electron .\"",
    "electron:build": "npm run build && electron-builder build --mac"
  },
  "dependencies": {
    "@react-three/drei": "^9.88.0",
    "@react-three/fiber": "^8.15.0",
    "framer-motion": "^10.16.0",
    "lucide-react": "^0.292.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "recharts": "^2.9.0",
    "socket.io-client": "^4.7.0",
    "three": "^0.158.0",
    "zustand": "^4.4.0"
  },
  "devDependencies": {
    "@types/node": "^20.9.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@types/three": "^0.158.0",
    "@vitejs/plugin-react": "^4.2.0",
    "autoprefixer": "^10.4.16",
    "concurrently": "^8.2.0",
    "cors": "^2.8.5",
    "electron": "^39.2.7",
    "electron-builder": "^26.0.12",
    "express": "^4.18.0",
    "postcss": "^8.4.31",
    "socket.io": "^4.7.0",
    "tailwindcss": "^3.3.5",
    "typescript": "^5.2.0",
    "vite": "^5.0.0",
    "vitest": "^1.0.0"
  }
}